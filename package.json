{
  "name": "intern-dev",
  "version": "0.2.5",
  "description": "Development support scripts for Intern projects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/theintern/intern-dev.git"
  },
  "license": "BSD-3-Clause",
  "files": [
    "*.js",
    "*.d.ts",
    "*.json"
  ],
  "dependencies": {
    "chalk": "~1.1.3",
    "chokidar": "~1.6.0",
    "glob": "~7.1.1",
    "semver": "~5.3.0",
    "shelljs": "~0.7.0",
    "tslint": "~5.0.0",
    "typescript": "~2.2.0"
  },
  "devDependencies": {
    "@types/browserify": "~12.0.30",
    "@types/chalk": "~0.4.31",
    "@types/chokidar": "~1.6.0",
    "@types/glob": "~5.0.30",
    "@types/semver": "~5.3.30",
    "@types/shelljs": "~0.7.0",
    "@types/node": "~7.0.0",
    "ts-node": "~3.0.0"
  },
  "bugs": "https://github.com/theintern/intern-dev/issues",
  "keywords": [
    "intern"
  ],
  "homepage": "http://gitub.com/theintern/intern-dev",
  "bin": {
    "intern-dev-browserify": "./intern-dev-browserify.js",
    "intern-dev-build": "./intern-dev-build.js",
    "intern-dev-clean": "./intern-dev-clean.js",
    "intern-dev-lint": "./intern-dev-lint.js",
    "intern-dev-release": "./intern-dev-release.js",
    "intern-dev-test": "./intern-dev-test.js",
    "intern-dev-watch": "./intern-dev-watch.js"
  },
  "scripts": {
    "build": "npm run clean && ts-node ./src/intern-dev-build.ts",
    "clean": "ts-node ./src/intern-dev-clean.ts",
    "release": "npm run lint && ts-node ./src/intern-dev-release.ts",
    "lint": "ts-node ./src/intern-dev-lint.ts"
  },
  "internDev": {
    "resources": {
      "_build/src": [
        "tslint.json"
      ]
    }
  }
}